arr = []
def extract(obj, arr, val):  
    if isinstance(obj, dict):
        for k, v in obj.items():
            if isinstance(v, dict):               
                extract(v, arr, val)
            elif isinstance(v, list):
                if val in v:
                    arr.append(k)
                else:
                    extract(v, arr, val)
            elif v == val:
                arr.append(k)
    elif isinstance(obj, list):
        for item in obj:
            if isinstance(item, dict):  
                extract(item, arr, val)   
